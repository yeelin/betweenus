<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="bottom|center_horizontal"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:textSize="32sp"
            android:textColor="@android:color/white"
            android:text="Btwn is better with Facebook" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:text="We only share if you tell us to" />

        <View
            android:layout_width="match_parent"
            style="@style/White_HorizontalRuleStyle" />

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"

            app:useDefaultMargins="false"
            app:alignmentMode="alignMargins"
            app:columnOrderPreserved="false"
            app:columnCount="2"
            app:orientation="horizontal"
            android:visibility="visible">

            <!-- Row 0 -->
            <ImageView
                app:layout_row="0"
                app:layout_column="0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="0.2"
                android:gravity="start"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:src="@drawable/ic_action_social_people" />

            <TextView
                app:layout_row="0"
                app:layout_column="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="0.8"
                android:gravity="start"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:text="Autofill your friend's start location"/>

            <!-- Row 1 -->
            <ImageView
                app:layout_row="1"
                app:layout_column="0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="0.2"
                android:gravity="start"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:src="@drawable/ic_action_detail_unfavorite"/>
            <TextView
                app:layout_row="1"
                app:layout_column="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="0.8"
                android:gravity="start"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:text="See which places your friends like"/>

            <!-- Row 2 -->
            <ImageView
                app:layout_row="2"
                app:layout_column="0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="0.2"
                android:gravity="start"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:src="@drawable/ic_action_content_send"/>
            <TextView
                app:layout_row="2"
                app:layout_column="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="0.8"
                android:gravity="start"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:text="Invite your friend using Messenger"/>
        </android.support.v7.widget.GridLayout>

        <View
            android:layout_width="match_parent"
            style="@style/White_HorizontalRuleStyle" />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/fb_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/skip_fb_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Skip"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:paddingLeft="20dp"
            android:paddingStart="20dp"
            android:paddingRight="20dp"
            android:paddingEnd="20dp"
            android:layout_marginBottom="40dp"/>

    </LinearLayout>

</ScrollView>