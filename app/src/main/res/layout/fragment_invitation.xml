<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".fragment.InvitationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- listview -->
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ListView
                    android:id="@+id/selected_items_listView"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:listSelector="@android:color/transparent"
                    android:cacheColorHint="@android:color/transparent"
                    android:clipToPadding="false"
                    android:scrollbarStyle="outsideOverlay"
                    tools:listitem="@layout/adapter_item_simplified"/>

                <TextView
                    android:id="@+id/selected_items_empty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_selection"
                    android:visibility="gone"/>

            </FrameLayout>
        </android.support.v4.widget.NestedScrollView>

        <!-- text field and send button -->
        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"

            app:useDefaultMargins="false"
            app:alignmentMode="alignMargins"
            app:columnOrderPreserved="false"
            app:columnCount="2"
            app:orientation="horizontal"
            android:visibility="visible">

            <EditText
                android:id="@+id/friend_contact"
                app:layout_row="0"
                app:layout_column="0"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="bottom"

                app:layout_gravity="bottom"
                app:layout_columnWeight=".8"

                style="@style/EditTextStyle"
                android:imeOptions="actionSend"
                android:inputType="phone"
                android:hint="@string/friend_phone" />

            <ImageButton
                android:id="@+id/invite_send_button"
                app:layout_row="0"
                app:layout_column="1"

                android:layout_width="0dp"
                android:layout_height="36dp"
                android:gravity="center"

                app:layout_gravity="center_vertical"
                app:layout_columnWeight=".2"

                style="@style/Medium_AccentButtonStyle"
                android:src="@drawable/ic_action_chat"/>

        </android.support.v7.widget.GridLayout>

        <!-- Toggle alternate invite option -->
        <Button
            android:id="@+id/invite_toggle_button"
            style="@style/Medium_AccentButtonStyle"
            android:layout_width="match_parent"
            android:layout_margin="16dp"
            android:layout_gravity="center"

            android:gravity="center"
            android:text="@string/invite_by_email" />

    </LinearLayout>
</ScrollView>
