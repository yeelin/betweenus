<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itinerary_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="100dp"
    card_view:cardCornerRadius="8dp"
    android:layout_margin="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/itinerary_profile_photo"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/colorAccentLight"/>

        <TextView
            android:id="@+id/itinerary_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Itinerary title Goes Here"
            android:textSize="24sp"
            android:paddingTop="24dp"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/textColorPrimary" />

        <TextView
            android:id="@+id/itinerary_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Itinerary Subtitle here"
            android:textSize="14sp"
            android:paddingBottom="16dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingBottom="16dp">

            <Button
                android:id="@+id/itinerary_action_view"
                style="@style/Card_ButtonStyle"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="View" />

            <Button
                android:id="@+id/itinerary_action_reuse"
                style="@style/Card_ButtonStyle"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Reuse" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>