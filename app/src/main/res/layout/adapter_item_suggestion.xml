<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"

    app:useDefaultMargins="false"
    app:alignmentMode="alignMargins"
    app:columnOrderPreserved="false"
    app:columnCount="3"
    app:orientation="horizontal">

    <ImageView
        android:id="@+id/item_image"
        app:layout_row="0"
        app:layout_column="0"

        android:layout_width="75dp"
        android:layout_height="75dp"

        app:layout_gravity="start|top"
        app:layout_columnWeight=".2"

        android:contentDescription="Image"
        android:src="@drawable/ic_business_image_placeholder"/>

    <LinearLayout
        app:layout_row="0"
        app:layout_column="1"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingLeft="4dp"
        app:layout_gravity="center_vertical"
        app:layout_columnWeight=".55"

        android:orientation="vertical">

        <TextView
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorPrimary"
            tools:text="Name"/>

        <TextView
            android:id="@+id/item_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/textColorSecondary"
            tools:text="Address"/>

        <TextView
            android:id="@+id/item_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/textColorSecondary"
            tools:text="Categories"/>

        <TextView
            android:id="@+id/item_reviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:drawableLeft="@drawable/stars_small_4"
            android:drawablePadding="5dp"
            android:paddingTop="2dp"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="@color/textColorSecondary"
            tools:text="123 reviews"/>
    </LinearLayout>

    <CheckedTextView
        android:id="@+id/item_toggle"
        app:layout_row="0"
        app:layout_column="2"

        android:layout_width="0dp"
        android:layout_height="match_parent"

        app:layout_columnWeight=".15"

        android:checkMark="@null"
        android:drawableLeft="@drawable/checked_item_state"
        android:drawableRight="@null"
        android:gravity="start"
        android:paddingLeft="4dp"
        tools:checked="true"
        app:layout_gravity="center_vertical"
        android:text="@null"/>

</android.support.v7.widget.GridLayout>