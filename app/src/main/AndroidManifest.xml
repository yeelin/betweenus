<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yeelin.projects.betweenus" >

    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.LocationEntryActivity"
            android:label="@string/title_launcher" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.SuggestionsActivity"
            android:label="@string/title_suggested_places"
            android:parentActivityName=".activity.LocationEntryActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.LocationEntryActivity"/>
        </activity>

        <activity android:name=".activity.PlaceActivity"
            android:label="@string/title_place"
            android:parentActivityName=".activity.LocationEntryActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.LocationEntryActivity"/>
        </activity>

        <activity android:name=".activity.LocationSearchActivity"
            android:label="@string/title_search"
            android:parentActivityName=".activity.LocationEntryActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.LocationEntryActivity"/>
        </activity>

        <activity android:name=".activity.DummySearchActivity"
            android:label="@string/title_dummy_search"
            android:parentActivityName=".activity.LocationSearchActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.LocationSearchActivity"/>
        </activity>

        <!--  Google Play Services -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyB7Afq_dlzZxlZzvVvk88ZFJ6hYcKK_5ME"/>

    </application>

</manifest>
