<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yeelin.projects.betweenus" >

    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- External storage for caching. -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- My Location -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <!-- Maps API needs OpenGL ES 2.0. -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.LocationEntryActivity"
            android:label="@string/title_launcher" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.LocationSearchActivity"
            android:label="@string/title_search"
            android:parentActivityName=".activity.LocationEntryActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.LocationEntryActivity"/>
        </activity>

        <activity android:name=".activity.DummySearchActivity"
            android:label="@string/title_dummy_search"
            android:parentActivityName=".activity.LocationSearchActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.LocationSearchActivity"/>
        </activity>

        <activity android:name=".activity.SuggestionsActivity"
            android:label="@string/title_suggested_places"
            android:parentActivityName=".activity.LocationEntryActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.LocationEntryActivity"/>
        </activity>

        <activity android:name=".activity.SuggestionDetailActivity"
            android:label="@string/title_detail"
            android:parentActivityName=".activity.SuggestionsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.SuggestionsActivity"/>
        </activity>

        <activity android:name=".activity.InvitationActivity"
            android:label="@string/title_invitation"
            android:parentActivityName=".activity.SuggestionsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.SuggestionsActivity"/>
        </activity>

        <!-- Intent service to fetch google places and autocomplete data -->
        <service
            android:name=".service.PlacesService"
            android:exported="false"/>

        <!--  Google Play Services -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyB7Afq_dlzZxlZzvVvk88ZFJ6hYcKK_5ME"/>
    </application>
</manifest>
